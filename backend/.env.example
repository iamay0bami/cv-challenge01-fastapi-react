# Domain - change to your production domain on deployment
DOMAIN=localhost

# Environment: local, staging, production
ENVIRONMENT=local

PROJECT_NAME="Full Stack FastAPI Project"
STACK_NAME=full-stack-fastapi-project
API_V1_STR=/api

# Backend CORS (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost,http://localhost:5173,https://localhost,https://localhost:5173,http://127.0.0.1:5173

# Security
SECRET_KEY=<REDACTED>

# Initial user
FIRST_SUPERUSER=chanllenge@devopsdojo.com
FIRST_SUPERUSER_PASSWORD=<REDACTED>
USERS_OPEN_REGISTRATION=True

# Email (leave blank or fill with real values on server)
SMTP_HOST=
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=info@example.com
SMTP_TLS=True
SMTP_SSL=False
SMTP_PORT=587

# Postgres (use these if you run DB inside Compose; update on server as needed)
POSTGRES_SERVER=cv-db
POSTGRES_PORT=5432
POSTGRES_DB=app
POSTGRES_USER=app
POSTGRES_PASSWORD=<REDACTED>
